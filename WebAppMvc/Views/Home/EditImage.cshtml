@model WebAppMvc.Models.Person
@{
    ViewData["Title"] = "Редактировать фотографию";
}

 
<h2 class="title">Редактирование фотографии</h2>
<form asp-action="editimage" asp-controller="home" asp-route-id="@Model.Id" enctype="multipart/form-data">
    
    <p>
        <label>Имя</label>
        <input name="Name" class="form-control" asp-for="Name" />
    </p>
   
    
                
            
          
    <p>
        <label>День рождения</label>
        <input name="Birthday" type="date" class="form-control" asp-for="Birthday" />
    </p>
    </p>

        <label asp-for="Image">Фотография</label>
        <input name="Image" type="file" class="form-control" />
    
    <p>
        <input class="button" type="submit" value="Отправить" />
    </p>
</form> 
