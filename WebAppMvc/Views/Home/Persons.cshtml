@model IEnumerable<WebAppMvc.Models.Person>
@{
    ViewData["Title"] = "Друзья";
}

<div class="sort">
    <label>Сортировать</label>
        <a asp-action="Persons" asp-route-sortOrder="@ViewBag.NameSort">
                Имя
            </a>
    
            <a asp-action="Persons" asp-route-sortOrder="@ViewBag.BirthSort">
                Дата
            </a>
</div>  

<table class="table">
 <tbody>
    @foreach (var item in Model)
    {
        <tr> 
            @if (item.Image != null)
            {
                <td >
                    <img class="avatar" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
                </td>
            }
            <td>@item.Name</td><td class="bd">@item.Birthday.ToString("dd.MM.yyyy")</td>
            
            <td>
                <a class="button" asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a>
                <form asp-controller="Home" asp-action="Delete" method="post"  asp-route-id="@item.Id">
                <input class="button" type="submit" value="Удалить" />
                </form>
               
            </td>
        </tr>
        
            
        }
        </tbody>
        </table>
