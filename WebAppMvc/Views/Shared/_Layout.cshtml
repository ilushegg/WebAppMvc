<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*<title>@ViewBag.Title</title>*@
    <title>@ViewData["Title"]</title>
    
    
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        a{
    
    text-decoration: none;
}
body{
    padding: 0;
    margin: 0;
}
.container{
    max-width: 1060px;
    margin: auto;
    font-family: 'Lucida Sans Unicode';
}

header{
    
    padding: 0;
    margin: 0;
    background: #1E1E24;
    color: #fff;
    font-family: 'Lucida Sans Unicode';
}
.header__inner{
    display:flex;
    justify-content: space-between;
    height: 50px;
}
.header__section{
    display: flex;
    align-items: center;
}
.header__item {
    
    padding: 10px 15px;
    font-size: 12px;
    
    list-style: none;
    line-height: 30px;
    transition: .3s;
}
.header__item a{
    color: #F7EBE8;
    text-transform: uppercase;
}
.header__item:hover {
    background-color: #444140;
    font-weight: 700;
    cursor: pointer;
}
.general{
    margin-top: 50px;
}
.title{
    color: #1E1E24;
}
.table{
    max-width: 900px;
    width: 100%;
    margin: auto;
    
}
table thead tr {
    padding-bottom: 45px;   
    
    
    
}
table thead tr th{
    color: #1E1E24;
    letter-spacing: 2px;
    text-transform: uppercase;
    
}

table td{
    
    padding: 12px 16px;
    margin: auto auto;
    text-align: center;
}

.avatar{
    height: 100px;
    width: 100px;
    object-fit: cover;
    border-radius: 50%;
}
.button{
    display: inline-block;
    width: 120px;
    height: 35px;
    line-height:35px;
    border-radius: 35px;
    margin: 7px 20px;
    border: none;
    font-size: 10px;
    text-transform: uppercase;
    text-align: center;
    letter-spacing: 2px;
    font-weight: 600;
    color: #524f4e;
    background: white;
    box-shadow: 0 8px 15px rgba(0, 0, 0, .1);
    transition: .3s;
}
.button:hover{
    background: #FFA987;
    color: white;

}
.bd{
    color: #524f4e;
}
.sort{
    color: #524f4e;
    display: flex;
    justify-content: flex-end;
    
    font-size: 13px;
    

}
.sort a{
    margin: 0px 15px 0 15px; 
}


.settings_form input{
    max-width: 300px;
}

@@media (max-width: 600px){

    .header__item {
    
    padding: 5px 7px;
    font-size: 12px;
    
    list-style: none;
    line-height: 30px;
    transition: .3s;
}

.table{
    max-width: 600px;
    width: 100%;
    margin: auto;
    font-size: 12px;
}


table td{
    
    padding: 12px 5px;
    margin: auto auto;
    text-align: center;
}

.avatar{
    height: 50px;
    width: 50px;
    object-fit: cover;
    border-radius: 50%;
}
.button{
    display: inline-block;
    width: 100px;
    height: 25px;
    line-height:25px;
    border-radius: 25px;
    margin: 7px 15px;
    border: none;
    font-size: 10px;
    text-transform: uppercase;
    text-align: center;
    letter-spacing: 2px;
    font-weight: 500;
    color: #524f4e;
    background: white;
    box-shadow: 0 8px 15px rgba(0, 0, 0, .1);
    transition: .3s;
}
}
    </style>

</head>
 <body>
        <!--меню-->
        <header>
            <div class="container">
                <div class="header__inner">
                    <ul class="header__section">
                        <li class="header__item"><a href="~/Home/Index" class="navbar-brand">Главная</a></li>
                        <li class="header__item"><a href="~/Home/Persons" class="navbar-brand">Друзья</a></li>
                        <li class="header__item"><a href="~/Home/Create" class="navbar-brand">Добавить</a></li>
                        
                    </ul>
                    <ul class="header__section">
                        <li class="header__item"><a href="~/Home/Settings" class="navbar-brand">Настройки</a></li>
                    </ul>
                </div>
            </div>
        </header>
        <div class="general">
        <div class="container body-content">
            @RenderBody()
            
            <footer>
                <p>© 2022 - CongratulationApp</p>
            </footer>
        </div>
        </div>
    </body>
</html>
